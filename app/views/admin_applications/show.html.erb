<h1><%= @application.applicant %>'s Application</h1>

<h2>Status:<%= @application.status %></h2>


<h3>Address:</h3>
<p><%= @application.address %></p>

<h3>Description:</h3>
<p><%= @application.description %></p>

<h3>Pets:</h3>
<ul>
<% @application.pets.each do |pet| %>
  <li><%= pet.name %>
    <% if !pet.application_result(@application.id) %>
      <%= button_to "Approve", "/admin/applications/#{@application.id}?pet=#{pet.id}&action=Approved", method: :post %>
      <%= button_to "Reject", "/admin/applications/#{@application.id}?pet=#{pet.id}&action=Rejected", method: :post %></li>
    <% else %>
      <%= pet.application_result(@application.id) %>
    <% end %>
<% end %>

</ul>
